		input.nextLine();
		
		System.out.println("------------------------------");
		
		System.out.println("El título es " + game3.getTitulo());
		System.out.println("El género es " + game3.getGenero());
		System.out.println("El precio es es " + game3.getPrecio() + "$");
		
		input.close();
